{
    // Base
    "window.zoomLevel": 3,
    "editor.tabSize": 4,
    "workbench.colorCustomizations": {
        "titleBar.activeBackground": "#61dafb",
        "sideBarSectionHeader.background": "#26bccf",
        "sideBarSectionHeader.foreground": "#164657",
        "activityBar.activeBackground": "#93e6fc",
        "activityBar.background": "#93e6fc",
        "activityBar.foreground": "#15202b",
        "activityBar.inactiveForeground": "#15202b99",
        "activityBarBadge.background": "#fa45d4",
        "activityBarBadge.foreground": "#15202b",
        "commandCenter.border": "#15202b99",
        "sash.hoverBorder": "#93e6fc",
        "statusBar.background": "#61dafb",
        "statusBar.foreground": "#15202b",
        "statusBarItem.hoverBackground": "#2fcefa",
        "statusBarItem.remoteBackground": "#61dafb",
        "statusBarItem.remoteForeground": "#15202b",
        "titleBar.activeForeground": "#15202b",
        "titleBar.inactiveBackground": "#61dafb99",
        "titleBar.inactiveForeground": "#15202b99"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true
    },
    "workbench.colorTheme": "Palenight (Mild Contrast)",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.editor.tabSizing": "shrink",
    "workbench.sideBar.location": "right",
    // Python
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.pytestParameters": true,
    "python.analysis.inlayHints.variableTypes": true,
    // Formatting
    "black-formatter.interpreter": [
        "${workspaceFolder}/.venv/bin/python"
    ],
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.defaultFormatter": "ms-python.black-formatter",
    "files.autoSave": "onFocusChange",
    "python.languageServer": "Pylance",
    "python.analysis.extraPaths": ["${workspaceFolder}"],
    "python.analysis.autoImportCompletions": true,
    "python.analysis.showOnlyDirectDependenciesInAutoImport": true,
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "makefile.configureOnOpen": false,
    "peacock.remoteColor": "#61dafb",
}